<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.zainuel.services.ProjectDetailsSelectActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/address_select_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:hint="  Enter Your Address :"
            android:minHeight="150dp"
            android:padding="5dp"
            android:textAlignment="textStart" />

        <EditText
            android:id="@+id/selectedDateProject"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/address_select_project"
            android:layout_margin="10dp"
            android:hint="Select Date" />

        <Button
            android:id="@+id/selectDateProjectDetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/selectedDateProject"
            android:layout_margin="10dp"
            android:text="Select Date" />

        <EditText
            android:id="@+id/selectedTimeProject"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/selectDateProjectDetails"
            android:layout_margin="10dp"
            android:hint="Select Time" />

        <Button
            android:id="@+id/selectTimeProjectDetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/selectedTimeProject"
            android:layout_margin="10dp"
            android:text="Select Time" />

        <Button
            android:id="@+id/next_project_details"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:text="Next" />
    </RelativeLayout>


</ScrollView>
