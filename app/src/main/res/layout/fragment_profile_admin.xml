<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="15dp"
    tools:context="com.example.zainuel.services.Admin.AdminHomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.zainuel.services.CircleImageView
            android:id="@+id/user_image_admin"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_account_circle_black_48dp" />

        <TextView
            android:id="@+id/username_admin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/user_image_admin"
            android:layout_marginTop="18dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/upload_docs_btn_admin_profile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/username_admin"
            android:layout_marginTop="55dp"
            android:padding="5dp"
            android:text="Upload Documents" />


    </RelativeLayout>


</ScrollView>
